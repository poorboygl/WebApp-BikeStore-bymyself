@model IEnumerable<WebApp.Models.Product>
<div class="card">
    <div class="card-header">
        <div class="card-title">Manage Product</div>
    </div>
    <div class="card-body">
        <table id="tbl">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Unit</th>
                    <th>Unit of Price</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
                @foreach (WebApp.Models.Product item in Model)
                {
                    <tr>
                        <td>@item.ProductId</td>
                        <td>@item.ProductCode</td>
                        <td>@item.ProductName</td>
                        <td>@item.Unit</td>
                        <td>@item.UnitOfPrice</td>
                        <td>
                            <img width="70" src="/Photo/@item.ImageUrl.Split(',')[0]" alt="@item.ProductName" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
  
</div>

    <script>
        $(tbl).DataTable();
    </script>