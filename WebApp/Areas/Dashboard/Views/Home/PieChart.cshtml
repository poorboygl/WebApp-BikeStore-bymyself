@model IEnumerable<WebApp.Models.Statistic>


    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
          google.charts.load("current", {packages:["corechart"]});
          google.charts.setOnLoadCallback(drawChart);
          function drawChart() {
            var a =[
              ['Name', 'Total']      
            ];

            var options = {
              title: 'Statistic Products By Category',
              is3D: true,
            };

              var chart = new google.visualization.PieChart(pieChart);

              $.post('/dashboard/home/pie', function (d) {
                  for (var i in d) {
                      a.push([d[i]['name'], d[i]['total']]);
                  }
                  var data = google.visualization.arrayToDataTable(a);

                  chart.draw(data, options);
              });
          }
    </script>
    <div id="pieChart" style="width: 1000px; height: 700px;"></div>

